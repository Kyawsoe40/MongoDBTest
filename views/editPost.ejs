<%- include('./includes/header') %>

    <h1>Edit your Post</h1>
    <form action="/admin/edit-post" method="post" class="create-form" >
        <div class="form-box">
            <label for="title" >Title</label>
            <input type="text" id="title" name="title" value="<%= post.title %>"  required/>
        </div>
        <Br>
        <div class="form-box">
            <label for="description" >Description</label>
            <input type="text" id="description" name="description" value="<%= post.description %>" required />
        </div>
        <br>
        <div class="form-box">
            <label for="imgUrl" >Image URL</label>
            <input type="text" id="imgUrl" name="imgUrl" value="<%= post.imgUrl %>" required />
        </div>
        <input type="text" name="id"  value="<%= post._id %>" hidden>
        <br>
        <button>Edit</button>
    </form>

    <a href="/">Back to Home Page</a>
    
<%- include('./includes/footer') %>